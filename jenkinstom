pipeline {
    agent {label 'slave1'}
    stages {
        stage('my Build') {
            steps {
                sh "echo ${BUILD_VERSION}"
                sh 'docker build -t tomcat_build:${BUILD_VERSION} .'
            }
        }  
        stage('publish stage') {
            steps {
                sh "echo ${BUILD_VERSION}"
                sh 'docker login -u sharath03 -p Snoofy@13'
                sh 'docker tag tomcat_build:${BUILD_VERSION} sharath03/tomcat_maven:${BUILD_VERSION}'
                sh 'docker push sharath03/tomcat_maven:${BUILD_VERSION}'
            }
        } 
        stage( 'my deploy' ) {
        agent {label 'slave2'} 
            steps {
               sh 'docker pull sharath03/tomcat_maven:${BUILD_VERSION}'
               sh 'docker rm -f mytomcat'
               sh 'docker run -d -p 8080:8080 --name mytomcat sharath03/tomcat_maven:${BUILD_VERSION}'
            }
        }    
    } 
}
